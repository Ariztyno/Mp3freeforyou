<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserProfileActivity"
    android:background="@drawable/bg_profile">
    <RelativeLayout
        android:id="@+id/relativelayoutUserProfile1"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/imgUserProfile_Avatar"
            android:layout_centerVertical="true"
            android:src="@drawable/iconavatar"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/txtUserProfile_Name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgUserProfile_Avatar"
            android:textColor="#ffffff"
            android:text="Phan Nhựt mINH ADNWNWNENJWENDJNWEJNJWEN"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#ffffff"
            android:background="@drawable/iconrepeat"
            android:id="@+id/btnReloadProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/relativelayoutUserProfile1"
        android:id="@+id/relativelayoutUserProfile2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundshape_btn"
            android:textColor="#ffffff"
            android:text="Đổi mật khẩu"
            android:id="@+id/btnDoimatkhau"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnDoimatkhau"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundshape_btn"
            android:textColor="#ffffff"
            android:text="Đổi Avatar"
            android:id="@+id/btnDoiavatar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnDoiavatar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundshape_btn"
            android:textColor="#ffffff"
            android:text="Đổi hồ sơ"
            android:id="@+id/btnDoihoso"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnDoihoso"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundshape_btn"
            android:textColor="#ffffff"
            android:text="Cập nhật sở thích"
            android:id="@+id/btnUpdateSothich"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativelayoutUserProfile2"
        android:id="@+id/relativelayoutUserProfile3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/cvDoimatkhau"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="12sp"
            app:cardBackgroundColor="#73000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTileDoimatkhau"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/roundshape_btn"
                    android:text="Đổi mật khẩu"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtThongBaoDoimatkhau"
                    android:layout_below="@id/txtTileDoimatkhau"
                    android:text="Hai mật khẩu không trùng!"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#ff0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtNewpassword"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="10dp"
                    android:text="Mật khẩu mới"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Nhập mật khẩu mới"
                    android:digits="0123456789qưertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM.,/';[]`~!@#$%;^*()_+-=&amp;?><&quot;"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtNewpassword"
                    android:id="@+id/edtNewpass"
                    android:inputType="textPassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@id/edtNewpass"
                    android:id="@+id/txtReNewpassword"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Nhập lại mật khẩu"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_below="@id/edtNewpass"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Nhập lại mật khẩu mới"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtReNewpassword"
                    android:id="@+id/edtReNewpass"
                    android:inputType="textPassword"
                    android:digits="0123456789qưertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM.,/';[]`~!@#$%;^*()_+-=&amp;?><&quot;"
                    android:maxLines="1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/edtReNewpass"
                    android:text="Xác nhận"
                    android:textColor="#ffffff"
                    android:background="@drawable/roundshape_btn"
                    android:id="@+id/btnXacnhandoimatkhau"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativelayoutUserProfile2"
        android:id="@+id/relativelayoutUserProfile4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDoihoso"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="12sp"
            app:cardBackgroundColor="#73000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTileDoihoso"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/roundshape_btn"
                    android:text="Đổi hồ sơ"
                    android:textSize="20sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtThongBaoDoihoso"
                    android:layout_below="@id/txtTileDoihoso"
                    android:text="Không được để trống!"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="#ff0000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtNewName"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="10dp"
                    android:text="Họ và tên"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Nhập mật tên mới"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtNewName"
                    android:id="@+id/edtNewName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@id/edtNewName"
                    android:id="@+id/txtNewEmail"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Email"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_below="@id/edtNewName"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Nhập email mới"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtNewEmail"
                    android:id="@+id/edtNewEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:visibility="gone"
                    android:layout_below="@id/edtNewEmail"
                    android:id="@+id/txtNewAvatar"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Avatar"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/btnUpload"
                    android:layout_margin="10dp"
                    android:text="Mở ảnh"
                    android:textColor="#ffffff"
                    android:background="@drawable/roundshape_btn"
                    android:layout_below="@+id/edtNewEmail"
                    android:layout_toRightOf="@+id/txtNewAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/edtNewAvatar"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:maxLength="10000"
                    android:hint="Nhập địa chỉ ảnh mới"
                    android:maxLines="1"
                    android:layout_below="@+id/edtNewEmail"
                    android:layout_toRightOf="@+id/txtNewAvatar"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/iconuser"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/btnUpload"
                    android:id="@+id/imgNewAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <Button
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/txtNewAvatar"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/edtNewAvatar"
                    android:text="Xác nhận"
                    android:textColor="#ffffff"
                    android:background="@drawable/roundshape_btn"
                    android:id="@+id/btnXacnhandoihoso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>