<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/relativelayoutAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#ff39aa"
            android:id="@+id/txtTitleAlbum"
            android:layout_margin="15dp"
            android:textSize="25sp"
            android:text="ALBUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_margin="19dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/iconarrow"
            android:paddingLeft="5dp"
            android:id="@+id/txtViewmoreAlbum"
            android:textSize="18sp"
            android:textColor="#ff39aa"
            android:layout_alignParentRight="true"
            android:text="Xem thÃªm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_below="@id/relativelayoutAlbum"
        android:id="@+id/recycleviewAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>