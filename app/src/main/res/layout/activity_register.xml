<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity">
    <androidx.appcompat.widget.Toolbar
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:id="@+id/tbRegister"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme">

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/Dangky"
        android:layout_below="@id/tbRegister"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPink"
        android:text="ĐĂNG KÝ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:layout_margin="5dp"
        android:background="#ff0000"
        android:id="@+id/txtThongBao"
        android:layout_below="@id/Dangky"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Lỗi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/txtThongBao"
        android:id="@+id/relativelayoutRegister1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPink"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/TenDangNhap"
            android:text="Tên đăng nhập:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:maxLength="12"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/TenDangNhap"
            android:id="@+id/edtUserNameRegister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/relativelayoutRegister1"
        android:id="@+id/relativelayoutRegister2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPink"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/Email"
            android:text="Email:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textEmailAddress"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/Email"
            android:id="@+id/edtEmailRegister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/relativelayoutRegister2"
        android:id="@+id/relativelayoutRegister3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPink"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/matkhau"
            android:text="Mật khẩu:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:maxLength="15"
            android:layout_toRightOf="@+id/matkhau"
            android:id="@+id/edtPasswordRegister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/relativelayoutRegister3"
        android:id="@+id/relativelayoutRegister4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPink"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/rematkhau"
            android:text="Nhập lại mật khẩu:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/rematkhau"
            android:id="@+id/edtRePasswordRegister"
            android:maxLength="15"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/relativelayoutRegister4"
        android:id="@+id/relativelayoutRegister5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPink"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/hoten"
            android:text="Họ và tên:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/hoten"
            android:id="@+id/edtNameRegister"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:textStyle="bold"
        android:text="Đăng ký"
        android:textColor="#ffffff"
        android:background="@drawable/roundshape_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/relativelayoutRegister5"
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

    </Button>
</RelativeLayout>