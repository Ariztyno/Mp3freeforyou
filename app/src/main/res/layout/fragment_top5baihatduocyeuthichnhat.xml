<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativelayoutTop5Baihat"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#ff39aa"
            android:id="@+id/txtTitleTop5"
            android:layout_margin="15dp"
            android:textSize="25sp"
            android:text="BẢNG XẾP HẠNG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_margin="19dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/iconarrow"
            android:paddingLeft="5dp"
            android:id="@+id/txtViewmoreGoiybaihat"
            android:textSize="18sp"
            android:textColor="#ff39aa"
            android:layout_alignParentRight="true"
            android:text="Xem thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ListView
        android:layout_below="@id/relativelayoutTop5Baihat"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lvTop5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>