<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="#ffffff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/txtUserNameFrgUserControlBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:layout_below="@+id/txtUserNameFrgUserControlBoard"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/txtEmailFrgUserControlBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/relativelayoutUCB1"
        android:background="@drawable/custom_rowtop5baihatduocyeuthichnhat"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/iconavatar"
            android:id="@+id/imgCircleUserControlBoard"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/txtNameFrgUserControlBoard"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imgCircleUserControlBoard"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="phannhutminh"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <Button
            android:visibility="gone"
            android:id="@+id/btnLogout"
            android:text="Đăng xuất"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:background="@drawable/roundshape_btn"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <com.facebook.login.widget.LoginButton
            android:visibility="gone"
            android:id="@+id/btnLogoutFacebook"
            android:text="Đăng xuất"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:background="@drawable/roundshape_btn"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayoutUCB2"
        android:layout_below="@+id/relativelayoutUCB1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/firstline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnLichsu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/btnStar"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconhistory" />

            <TextView
                android:layout_toLeftOf="@+id/btnStar"
                android:layout_below="@+id/btnLichsu"
                android:id="@+id/txtlichsu"
                android:textAlignment="center"
                android:text="Lịch sử nghe"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btnStar"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconstar" />

            <TextView
                android:layout_below="@+id/btnStar"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtStar"
                android:layout_toRightOf="@+id/btnLichsu"
                android:textAlignment="center"
                android:text="Gợi ý"
                android:textColor="#ffffff"
                android:layout_marginLeft="35dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/btnBanManage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/txtStar"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="35dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconforbidden" />

            <TextView
                android:layout_below="@+id/btnBanManage"
                android:id="@+id/txtBanManage"
                android:layout_toRightOf="@+id/txtStar"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="Danh sách chặn"
                android:textColor="#ffffff"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/secondline"
            android:layout_below="@+id/firstline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:visibility="visible"
                android:id="@+id/btnBaihat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/btnPlaylist"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconmusic" />

            <TextView
                android:layout_toRightOf="@+id/btnPlaylist"
                android:layout_below="@+id/btnBaihat"
                android:id="@+id/txtBaihat"
                android:text="Bài hát"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="35dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:layout_centerHorizontal="true"
                android:id="@+id/btnPlaylist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconplaylist" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnPlaylist"
                android:id="@+id/txtPlaylist"
                android:textAlignment="center"
                android:text="Playlist"
                android:textColor="#ffffff"
                android:layout_marginLeft="35dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/btnAlbum"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/btnPlaylist"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconalbum2" />

            <TextView
                android:layout_below="@+id/btnAlbum"
                android:layout_toLeftOf="@+id/btnPlaylist"
                android:id="@+id/txtAlbum"
                android:text="Album"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/thirdline"
            android:layout_below="@+id/secondline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnSinger"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toLeftOf="@+id/btnTypeMusic"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconsinger" />

            <TextView
                android:layout_below="@+id/btnSinger"
                android:id="@+id/txtSinger"
                android:text="Ca sĩ"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_toLeftOf="@+id/btnTypeMusic"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/btnTypeMusic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconpiechart" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnTypeMusic"
                android:id="@+id/txtTypeMusic"
                android:text="Thể loại"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/btnTypeMusic"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/iconprofile" />

            <TextView
                android:layout_below="@+id/btnProfile"
                android:id="@+id/txtProfile"
                android:layout_toRightOf="@id/btnTypeMusic"
                android:text="Tài khoản"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="35dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>










    </RelativeLayout>

</RelativeLayout>