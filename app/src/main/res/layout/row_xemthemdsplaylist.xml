<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/framelayoutRowXemThemDSPlaylist"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:elevation="6dp"
            android:id="@+id/imgRowXTDSPlylist"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
    </FrameLayout>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/colorPink"
        android:text="Minh 12121"
        android:gravity="left"
        android:maxWidth="180dp"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/txtRowTenPlaylistXTDSPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/colorBlue"
        android:textSize="13sp"
        android:text="Nhiều ca sĩ"
        android:id="@+id/txtRowTenCacCaSiPlaylistXTDSPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>