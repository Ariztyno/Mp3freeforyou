<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/rowbannerbackground"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </ImageView>
    <View
        android:background="@drawable/custom_rowbannerbackground"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
    <RelativeLayout

        android:id="@+id/rel1"
        android:layout_alignBottom="@+id/rowbannerbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/imagbanner"
            android:padding="2dp"
            android:layout_width="90dp"
            android:layout_height="90dp">

        </ImageView>
        <TextView
            android:id="@+id/txtTitleBanner"
            android:text="Rain"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagbanner"
            android:layout_alignTop="@id/imagbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_toRightOf="@id/imagbanner"
            android:layout_below="@id/txtTitleBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/txtnoidungbanner"
                android:textColor="#ffffff"
                android:text="Ca khúc mở đầu của bộ phim nổi tiếng cuốn theo cà khịa cực mạnh 2019"
                android:maxLines="2"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>